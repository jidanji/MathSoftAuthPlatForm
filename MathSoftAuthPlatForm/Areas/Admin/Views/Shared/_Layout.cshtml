<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="../../favicon.ico">
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Areas/Admin/Content/bootstrap3.3.5/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Content/bootstrap3.3.5/js/bootstrap.js"></script>
    <script src="~/Areas/Admin/Content/jquery-validation-1.15.0/dist/jquery.validate.min.js"></script>
    <link href="~/Areas/Admin/Content/jquery-validation-1.15.0/css/cmxform.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/jquery-validation-1.15.0/css/cmxformTemplate.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Content/Vue/dist/vue.min.js"></script>

    <link href="~/Scripts/Loading/Loading.css" rel="stylesheet" />
    <script src="~/Scripts/Loading/Loading.js"></script>

     <link href="~/Scripts/animate.min.css" rel="stylesheet" />

    <meta name="renderer" content=webkit>

    <style>
        html, body, ul {
            margin: 0;
            border: 0;
            padding: 0;
        }

        body {
            margin: 0 auto;
        }

        ul {
            height: 300px;
        }

        li {
            list-style-type: none;
        }

        a, div, p, span, table, tr, td, th, input {
            font-family: 微软雅黑;
            font-size: 14px;
        }

        .title {
            padding: 10px;
            font-family: 微软雅黑;
            font-size: 15px;
            color: White;
            background-color: #b2c3e5;
        }

        .borderrediusL {
            border-radius: 30px 0 0 0;
        }


        .nav {
            border: 1px solid #eee;
            width: 150px;
            box-sizing: border-box;
            height: 600px;
        }

            .nav li {
                background-color: #ecbf2d;
                width: 100%;
                border-bottom: 1px solid #c9c9c9;
                box-sizing: border-box;
                cursor: pointer;
            }

        .liSelected {
            background-color: Maroon;
            color: White;
        }

        .nav li a {
            padding: 5px;
            display: block;
            text-decoration: none;
        }

            .nav li a:hover {
                color: Lime;
            }


        .content {
            border: 1px solid #eee;
            width: 600px;
            box-sizing: border-box;
            height: 600px;
            overflow: auto;
        }


        table, tr, td, th {
            border-bottom: 1px solid #c9c9c9;
            border-collapse: collapse;
        }

        table {
            width: 100%;
            box-sizing: border-box;
        }

        tbody tr:hover {
            color: Highlight;
        }

        .select {
            background-color: Purple;
            color: White;
        }
    </style>
</head>
<body>
    @RenderBody()
</body>
@RenderSection("scripts", required: false)
</html>
